<?xml version="1.0" encoding="UTF-8"?>

<configuration>

	<!-- 打印logback初始化日志信息 -->
	<statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />

	<property name="ENCODER_PATTERN"
			  value="%d{yyyy-MM-dd  HH:mm:ss.SSS} [%thread] %-5level %logger{80} - %msg%n" />


	<appender name="FILE"
			  class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>./logs/pa-dispatch-api.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>./logs/pa-dispatch-api-%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<maxHistory>30</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches 30MB -->
				<maxFileSize>30MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>${ENCODER_PATTERN}</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n
			</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>


	<!-- Strictly speaking, the level attribute is not necessary since -->
	<!-- the level of the root level is set to DEBUG by default. -->
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
	</root>

	<logger name="com.ikamobile.pa" level="INFO" />
	<logger name="com.ikamobile.pa.thrift.client" level="DEBUG" />
	<logger name="com.ikamobile.ikasoa.core.thrift" level="DEBUG" />
</configuration>