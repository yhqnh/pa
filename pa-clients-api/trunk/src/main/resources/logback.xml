<?xml version="1.0" encoding="UTF-8"?>

<configuration>

	<!-- 打印logback初始化日志信息 -->
	<statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />

	<property name="ENCODER_PATTERN"
			  value="%d{yyyy-MM-dd  HH:mm:ss.SSS} [%thread] %-5level %logger{80} - %msg%n" />


	<appender name="FILE"
			  class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>./logs/pa-clients-api.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>./logs/pa-clients-api-%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<maxHistory>7</maxHistory>
		</rollingPolicy>
		<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
			<!-- or whenever the file size reaches 100MB -->
			<maxFileSize>20MB</maxFileSize>
		</timeBasedFileNamingAndTriggeringPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>${ENCODER_PATTERN}</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n
			</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>

	<appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
		<smtpHost>smtp.exmail.qq.com</smtpHost>
		<!-- <STARTTLS>true</STARTTLS> -->
		<username>no-reply@ikamobile.com</username>
		<password>ikamobile2416</password>
		<to>gaojiaxing@ikamobile.com</to>
		<from>no-reply@ikamobile.com</from>
		<subject>Error occured on pa-CLIENT</subject>
		<layout>
			<pattern>%date %level [%thread] %logger{36} - %msg%n
			</pattern>
		</layout>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
	</appender>

	<!-- Strictly speaking, the level attribute is not necessary since -->
	<!-- the level of the root level is set to DEBUG by default. -->
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
		<appender-ref ref="EMAIL" />
	</root>

	<logger name="com.ikamobile.pa" level="INFO" />
</configuration>